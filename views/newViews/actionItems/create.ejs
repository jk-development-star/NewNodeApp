<!-- Bootstrap4 Duallistbox -->
<link
  rel="stylesheet"
  href="/newAssets/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css"
/>
<!-- summernote -->
<link
  rel="stylesheet"
  href="/newAssets/plugins/summernote/summernote-bs4.min.css"
/>
<!-- Select2 -->
<link rel="stylesheet" href="/newAssets/plugins/select2/css/select2.min.css" />
<link rel="stylesheet" href="/newAssets/css/style.css" />
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Add New Action Item</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <a href="/dashboard">Home</a>
          </li>
          <li class="breadcrumb-item active">Add New Action Item</li>
        </ol>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>
<% if(message.error) {%>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= message.error %>
  <button type="button" class="close" data-dismiss="alert" aria-label="close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% }%> <% if(message.success) {%>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= message.success %>
  <button type="button" class="close" data-dismiss="alert" aria-label="close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% }%>
<!-- Main content -->

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
          <form
            class="form"
            action="/actionItems/store"
            method="POST"
            data-parsley-validate
          >
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <!-- text input -->
                  <div class="form-group mandatory">
                    <label for="work_category" class="form-label"
                      >Work Category</label
                    >
                    <select
                      class="select2 work_category"
                      style="width: 100%"
                      name="work_category"
                      id="work_category"
                    >
                      <option></option>
                      <option value="KW">Kitchen Wooden</option>
                      <option value="RF">Room Furniture</option>
                      <option value="GW">Gates and Windows</option>
                      <option value="TC">Table and Chairs</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group mandatory">
                    <label for="name" class="form-label">Name</label>
                    <input
                      type="text"
                      class="form-control"
                      name="action_item_name"
                      id="action_item_name"
                      placeholder="Enter Name"
                      data-parsley-required="true"
                    />
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-3">
                  <div class="form-group mandatory">
                    <label for="text" class="form-label"
                      >Completion Day(s)</label
                    >
                    <input
                      type="number"
                      class="form-control"
                      name="action_item_completion_days"
                      id="action_item_completion_days"
                      placeholder="Enter completion day(s)"
                      data-parsley-required="true"
                    />
                  </div>
                </div>

                <div class="col-md-3">
                  <!-- text input -->
                  <div class="form-group mandatory">
                    <label for="country" class="form-label"
                      >Per Unit Charge/Day</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      name="unit_charge"
                      id="unit_charge"
                      placeholder="Enter unit charge"
                      data-parsley-required="true"
                    />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <div class="form-group mandatory">
                    <label class="form-label">Tasks</label>
                    <select
                      class="duallistbox"
                      multiple="multiple"
                      name="action_item_tasks[]"
                      data-parsley-required="true"
                    >
                      <% if(typeof task !== 'undefined' && task.length > 0){ %>
                      <% task.forEach(function(tasks){ %>
                      <option value="<%= tasks._id %>">
                        <%= tasks.task_name %>
                      </option>
                      <%})%> <% } else{%>
                      <option value="">No Tasks Found</option>
                      <%}%>
                    </select>
                  </div>
                  <!-- /.form-group -->
                </div>
                <!-- /.col -->
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label for="follow" class="form-label">Description</label>
                  <textarea class="summernote" name="action_item_description">
                  </textarea>
                </div>
                <!-- /.col-->
              </div>

              <!-- /.col-->
            </div>
            <div class="card-footer">
              <button type="submit" class="btn btn-sm btn-primary">
                Submit
              </button>
              <a class="btn-sm btn-danger float-right" href="/leads"> Back</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/newAssets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

<script src="/newAssets/js/actionItems/create.actionItem.js"></script>
<script src="/newAssets/parsleyjs/parsley.min.js"></script>
<script src="/newAssets/js/parsley.js"></script>
<!-- Bootstrap4 Duallistbox -->
<script src="/newAssets/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
<!-- Summernote -->
<script src="/newAssets/plugins/summernote/summernote-bs4.min.js"></script>
<script src="/newAssets/plugins/select2/js/select2.full.min.js"></script>
<script>
  $(function () {
    // Summernote
    $(".summernote").summernote();
  });

  $(function () {
    //Initialize Select2 Elements
    $("#work_category").select2({
      placeholder: "Select Work Type",
    });
  });

  //Bootstrap Duallistbox
  $(".duallistbox").bootstrapDualListbox();
</script>
